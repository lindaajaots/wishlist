<h1><%=@wishlist.name%></h1>

<p> Here are your things :</p>

<table>
  <thead>
    <tr>
      <th>Thing name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @wishlist.things.each do |thing| %>
    <tr>
      <td><%= thing.name %></td>
      <td><%= link_to 'Edit', edit_thing_path(thing.id) %></td>
      <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>

<%= link_to 'Add things', new_thing_path(wishlist_id:params[:id]) %>
<%= link_to 'New wishlist', new_wishlist_path %>
<%= link_to 'Back', wishlists_path %>
